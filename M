    <div class="box">
        <h2>Edit Phone Number</h2>

        <input type="text" id="phoneInput" placeholder="Masukkan nomor HP">
        <br>
        <button onclick="simpanNomor()">Simpan Nomor</button>

        <p>Nomor tersimpan:</p>
        <h3 id="hasil">Belum ada nomor</h3>
    </div>

<script>
function simpanNomor() {
    var nomor = document.getElementById("phoneInput").value;
    localStorage.setItem("phoneNumber", nomor);
    document.getElementById("hasil").innerText = nomor;
}

window.onload = function() {
    var saved = localStorage.getItem("phoneNumber");
    if (saved) {
        document.getElementById("hasil").innerText = saved;
    }
}
</script>

